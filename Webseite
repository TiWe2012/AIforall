  <script>
    // kleine Hilfsfunktionen:
    document.getElementById('year').textContent = new Date().getFullYear();

    // Öffnen beim Klick auf Karte (außer wenn spezifischer Link geklickt wurde)
    document.querySelectorAll('.card').forEach(card=>{
      card.addEventListener('click', (e)=>{
        // wenn auf einen echten Link geklickt wurde: nichts tun (Link öffnet)
        if(e.target.closest('a')) return;
        const url = card.getAttribute('data-url');
        if(url && url !== '#') window.open(url, '_blank','noopener');
      });

      // Tastatur-Unterstützung: Enter öffnet Link
      card.addEventListener('keydown', (e)=>{
        if(e.key === 'Enter' || e.key === ' ') {
          e.preventDefault();
          const url = card.getAttribute('data-url');
          if(url && url !== '#') window.open(url, '_blank','noopener');
        }
      });
    });

    // Optional: progressive animation speed for the "glow" background using motion depending on pointer
    // keine externe lib nötig — schon schön genug
  </script>
